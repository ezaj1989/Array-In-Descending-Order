import java.util.*;
public class Counting_no_Of_digits_in_Integer {
    public static void counting_num_of_digits(int a){
        int count=0;
        while(a>0){
            count++;
            a=a/10;
        }
        System.out.println("number of digits in the integer is: "+count);
    }
    public static void main(String args[]){
        Scanner sc=new Scanner(System.in);
        System.out.print("Enter the number: ");
        int a=sc.nextInt();
        counting_num_of_digits(a);
    }
}
